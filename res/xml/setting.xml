<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="开机项" >
        <CheckBoxPreference android:key="toggle" android:title="开启悬浮窗" android:defaultValue="true"/><CheckBoxPreference
            android:defaultValue="true"
            android:key="auto_start"
            android:title="开机自动启动" />
        
    </PreferenceCategory>
    <PreferenceCategory android:title="文字" >
        <ListPreference
            android:defaultValue="12"
            android:dialogTitle="设置文字大小"
            android:entries="@array/text_size"
            android:entryValues="@array/text_size_value"
            android:key="text_size"
            android:title="设置文字大小" />
        <ListPreference
            android:defaultValue="MAGENTA"
            android:dialogTitle="设置文字颜色"
            android:entries="@array/text_color"
            android:entryValues="@array/text_color_value"
            android:key="text_color"
            android:title="设置文字颜色" />
    </PreferenceCategory>
    <PreferenceCategory android:title="悬浮窗" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="view_lock"
            android:title="位置锁定" />
        <CheckBoxPreference
            android:defaultValue="flase"
            android:key="view_hidden"
            android:title="无网络时隐藏" />
        <ListPreference
            android:defaultValue="2"
            android:dialogTitle="设置显示模式"
            android:entries="@array/view_mode"
            android:entryValues="@array/view_mode_value"
            android:key="view_mode"
            android:title="显示模式" />
    </PreferenceCategory>
</PreferenceScreen>